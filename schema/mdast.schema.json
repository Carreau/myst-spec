{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spec.myst.tools/json-schema/mdast.schema.json",
  "description": "Syntactic unit in a strictly CommonMark compliant mdast syntax tree.",
  "type": "object",
  "properties": {
    "type": {
      "description": "Type of the node",
      "const": "root"
    },
    "children": {
      "description": "Top-level children of mdast document",
      "anyOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/FlowContent"
          }
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ListContent"
          }
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/PhrasingContent"
          }
        }
      ]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "Content": {
      "oneOf": [
        {
          "$ref": "commonmark.schema.json#/$defs/Paragraph"
        }
      ]
    },
    "FlowContent": {
      "oneOf": [
        {
          "$ref": "#/$defs/Content"
        },
        {
          "$ref": "commonmark.schema.json#/$defs/Heading"
        },
        {
          "$ref": "commonmark.schema.json#/$defs/ThematicBreak"
        }
      ]
    },
    "ListContent": {
      "oneOf": []
    },
    "PhrasingContent": {
      "oneOf": [
        {
          "$ref": "commonmark.schema.json#/$defs/Text"
        }
      ]
    }
  }
}
